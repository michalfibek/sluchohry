{var $backlink = ':Admin:Notations:'}
{var $initMidiJs = true}
{var $initHighlightTextarea = true}

{block content}

<header>
<h1 n:block="title">Notation editor <small>{ifset $notation}{$notation->title}{else}Add new notation{/ifset}</small></h1>
</header>

<div class="clearfix"></div>

<div class="container notation-editor{* hidden*}">

    <div class="col-sm-6">
        <form n:name="notationEditForm" class="form-horizontal">
            <input n:name="notation_id" id="notation_id" type="hidden">
            <div class="form-group">
                <label n:name="artist" for="artist" class="col-sm-4 control-label">Artist:</label>
                <div class="col-sm-8">
                    <input n:name="artist" type="text" class="form-control" id="artist">
                </div>
            </div>
            <div class="form-group">
                <label n:name="title" for="title" class="col-sm-4 control-label">Title:</label>
                <div class="col-sm-8">
                    <input n:name="title" type="text" class="form-control" id="title">
                </div>
            </div>
            <div class="form-group">
                <label n:name="genre_id" for="genre" class="col-sm-4 control-label">Genre:</label>
                <div class="col-sm-8">
                    <select n:name="genre_id" id="genre" class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label n:name="octave_id" for="octave" class="col-sm-4 control-label">Octave:</label>
                <div class="col-sm-8">
                    <select n:name="octave_id" id="octave" class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label n:name="tempo_id" for="tempo" class="col-sm-4 control-label">Tempo:</label>
                <div class="col-sm-8">
                    <select n:name="tempo_id" id="tempo" class="form-control">
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label n:name="sheet" for="sheet" class="col-sm-4 control-label">Sheet:</label>
                <div class="col-sm-8">
                    <textarea n:name="sheet" type="text" class="form-control" id="sheet" rows="6" cols="60" spellcheck="false">
                    </textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4 control-label">Wrong notes:</div>
                <div class="col-sm-8 text-right">
                    <p id="wrong-input-list" class="form-control-static"></p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Game:</label>
                <div class="col-sm-8" n:inner-foreach="$form[game]->items as $key => $label">
                    <div class="checkbox">
                        <label n:name="game:$key"><input n:name="game:$key"> {$label}</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12 text-right">
                    <button type="button" class="btn btn-default" id="btn-play"><span class="fa fa-play"></span> Play</button>
                    <button type="button" class="btn btn-default" id="btn-stop"><span class="fa fa-stop"></span> Stop</button>
                </div>
            </div>
            <div class="form-group main-buttons">
                <div class="col-sm-12 text-right">
                    <button n:name="delete" id="button-delete" type="submit" class="btn btn-danger"><span class="fa fa-remove"></span> Delete</button>
                    <button n:name="update" id="button-update" type="submit" class="btn btn-primary btn-lg"><span class="fa fa-check fa-lg"></span> Update</button>
                </div>
            </div>
        </form>
    </div>

</div>

{/block}


{block scripts}
{include parent}


<script src="{$basePath}/assets/js/notationPlayer.js"></script>
<script src="{$basePath}/assets/js/editNotation.js"></script>

<script type="text/javascript">

    var sheet = $('#sheet').val();
    var tempoList = {$tempoList};
    var octaveList = {$octaveList};
    var tempoDefault = tempoList[$('#tempo').val()];
    var octaveShiftDefault = octaveList[$('#octave').val()];

    n = new NotationPlayer(sheet, tempoDefault, octaveShiftDefault);
    g = new EditNotation(n, tempoList, octaveList);


</script>
{/block}
